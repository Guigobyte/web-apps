<%
  ranks = [2, 3, 4, 5, 6, 7, 8, 9, 10, "Jack", "Queen", "King", "Ace"]
  suits = ["Clubs", "Diamonds", "Hearts", "Spades"]

  deck = []
  for rank in ranks
    for suit in suits
      card = "#{rank}_of_#{suit}"
      deck.push(card)
    end
  end

  shuffled_deck = deck.shuffle
  hand = shuffled_deck[0,5]

%>


<h1> Your Cards, Sir </h1>

<p>
  <% for card in hand %>
    <img src="/images/cards/<%=card.downcase%>.svg" width = 10% height = auto>
  <% end %>
</p>

